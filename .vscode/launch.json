    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/rust-ots.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rust-ots'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-ots",
                    "--package=rust-ots"
                ],
                "filter": {
                    "name": "rust-ots",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
               "RUST_BACKTRACE": "1",
               "RUST_LOG": "debug",
               "RUST_LOG_STYLE": "always",
            },
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rust-ots'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rust-ots",
                    "--package=rust-ots"
                ],
                "filter": {
                    "name": "rust-ots",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}